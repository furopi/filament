root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{py,py3}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
quote_type = single


[*.blade.php]
indent_size = 2

[*.php]
indent_size = 4

[*.conf]
indent_size = 4


[*.twig]
indent_size = 2

[*.{js,json}]
quote_type = single

[*.{scss,sass}]
quote_type = single
number-leading-zero = never
